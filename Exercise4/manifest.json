{
  "manifest_version": 2,
  "name": "Rich Twitter Notifier",
  "description": "Allow you to get notifications immediately as desktop ones.",
  "icons": {
    "64": "icon.png",
    "32": "icon.png",
    "128": "icon.png",
    "16": "icon.png"
  },
  "background": {
    "page": "background.html"
  },
  "version": "1.0",
  "permissions": ["notifications", "https://twitter.com/i/notifications"]
}
